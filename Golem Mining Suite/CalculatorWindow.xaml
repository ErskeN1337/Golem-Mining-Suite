<Window x:Class="Golem_Mining_Suite.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cargo Value Calculator" 
        Height="450" 
        Width="500"
        Background="#1E1E1E"
        BorderBrush="#FF8C42"
        BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Cargo Value Calculator"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#CCCCCC"
                   Margin="10"
                   HorizontalAlignment="Center"/>

        <!-- Station Selection -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Select Station:"
               Foreground="#CCCCCC"
               FontSize="14"
               Margin="0,0,0,5"/>
            <ComboBox Name="StationComboBox"
              FontSize="14"
              Padding="5"
              SelectionChanged="StationComboBox_SelectionChanged">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <ToggleButton Name="ToggleButton"
                                            BorderThickness="1"
                                            Foreground="#CCCCCC"
                                            Grid.Column="2"
                                            Focusable="false"
                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Background" Value="#2A2A2A"/>
                                                    <Setter Property="BorderBrush" Value="#444444"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="1">
                                                                    <ContentPresenter/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3D3528"/>
                                                            <Setter Property="BorderBrush" Value="#FF8C42"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ToggleButton.Style>
                                            <TextBlock Text="{TemplateBinding SelectionBoxItem}" 
                                             Margin="5"
                                             Foreground="#CCCCCC"/>
                                        </ToggleButton>
                                        <Popup Name="Popup"
                                     Placement="Bottom"
                                     IsOpen="{TemplateBinding IsDropDownOpen}"
                                     AllowsTransparency="True"
                                     Focusable="False"
                                     PopupAnimation="Slide">
                                            <Grid Name="DropDown"
                                        SnapsToDevicePixels="True"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="200">
                                                <Border Background="#2A2A2A" 
                                              BorderBrush="#444444" 
                                              BorderThickness="1"/>
                                                <ScrollViewer Margin="1" SnapsToDevicePixels="True">
                                                    <StackPanel IsItemsHost="True" 
                                                      KeyboardNavigation.DirectionalNavigation="Contained" 
                                                      Background="#2A2A2A"/>
                                                </ScrollViewer>
                                            </Grid>
                                        </Popup>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.Style>
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#3D3528"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </StackPanel>

        <!-- Mineral Selection -->
        <StackPanel Grid.Row="2" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Select Mineral:"
                       Foreground="#CCCCCC"
                       FontSize="14"
                       Margin="0,0,0,5"/>
                    <ComboBox Name="MineralComboBox"
                      FontSize="14"
                      Padding="5"
                      SelectionChanged="MineralComboBox_SelectionChanged">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton Name="ToggleButton"
                                                    BorderThickness="1"
                                                    Foreground="#CCCCCC"
                                                    Grid.Column="2"
                                                    Focusable="false"
                                                    IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                    ClickMode="Press">
                                                    <ToggleButton.Style>
                                                        <Style TargetType="ToggleButton">
                                                            <Setter Property="Background" Value="#2A2A2A"/>
                                                            <Setter Property="BorderBrush" Value="#444444"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="1">
                                                                            <ContentPresenter/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#3D3528"/>
                                                                    <Setter Property="BorderBrush" Value="#FF8C42"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ToggleButton.Style>
                                                    <TextBlock Text="{TemplateBinding SelectionBoxItem}" 
                                                     Margin="5"
                                                     Foreground="#CCCCCC"/>
                                                </ToggleButton>
                                                <Popup Name="Popup"
                                             Placement="Bottom"
                                             IsOpen="{TemplateBinding IsDropDownOpen}"
                                             AllowsTransparency="True"
                                             Focusable="False"
                                             PopupAnimation="Slide">
                                                    <Grid Name="DropDown"
                                                SnapsToDevicePixels="True"
                                                MinWidth="{TemplateBinding ActualWidth}"
                                                MaxHeight="200">
                                                        <Border Background="#2A2A2A" 
                                                      BorderBrush="#444444" 
                                                      BorderThickness="1"/>
                                                        <ScrollViewer Margin="1" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True" 
                                                              KeyboardNavigation.DirectionalNavigation="Contained" 
                                                              Background="#2A2A2A"/>
                                                        </ScrollViewer>
                                                    </Grid>
                                                </Popup>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="Padding" Value="5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter Property="Background" Value="#3D3528"/>
                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>

                <!-- Compare Prices Button -->
                <Button Grid.Column="1"
                Name="ComparePricesButton"
                Content="ðŸ“Š Compare"
                VerticalAlignment="Bottom"
                Margin="10,0,0,0"
                Padding="10,5"
                FontSize="12"
                Foreground="#CCCCCC"
                BorderThickness="1"
                Cursor="Hand"
                Click="ComparePricesButton_Click"
                ToolTip="Compare prices at all stations">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3D3528"/>
                                    <Setter Property="BorderBrush" Value="#FF8C42"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>

        <!-- SCU Input -->
        <StackPanel Grid.Row="3" Margin="10">
            <TextBlock Text="Enter SCU Amount:"
               Foreground="#CCCCCC"
               FontSize="14"
               Margin="0,0,0,5"/>
            <TextBox Name="ScuTextBox"
             Background="#2A2A2A"
             Foreground="#CCCCCC"
             FontSize="14"
             Padding="5"
             BorderThickness="1"
             TextChanged="ScuTextBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D3528"/>
                                <Setter Property="BorderBrush" Value="#FF8C42"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF8C42"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </StackPanel>

        <!-- Result Display -->
        <Border Grid.Row="4"
                Margin="10"
                Padding="15"
                Background="#2A2A2A"
                BorderBrush="#444444"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Name="ResultText"
                           Text="Total Value: 0 aUEC"
                           Foreground="#CCCCCC"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Name="DetailText"
                           Text=""
                           Foreground="#CCCCCC"
                           FontSize="12"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center"/>
                <TextBlock Name="StationInfoText"
                           Text=""
                           Foreground="#888888"
                           FontSize="10"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>