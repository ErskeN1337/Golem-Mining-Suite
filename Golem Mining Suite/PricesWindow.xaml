<Window x:Class="Golem_Mining_Suite.PricesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mineral Prices" Height="600" Width="900"
        Background="#1E1E1E"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <Border Grid.Row="0" Background="#2A2A2A" Margin="10" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Star System:" 
                           Foreground="#CCCCCC" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <RadioButton Name="AllSystemsRadio" 
                             Content="All" 
                             Foreground="#CCCCCC" 
                             IsChecked="True"
                             Margin="0,0,15,0"
                             Checked="FilterChanged"/>
                <RadioButton Name="StantonRadio" 
                             Content="Stanton" 
                             Foreground="#CCCCCC" 
                             Margin="0,0,15,0"
                             Checked="FilterChanged"/>
                <RadioButton Name="PyroRadio" 
                             Content="Pyro" 
                             Foreground="#CCCCCC"
                             Margin="0,0,30,0"
                             Checked="FilterChanged"/>

                <TextBlock Text="Mineral:" 
                           Foreground="#CCCCCC" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox Name="MineralFilterComboBox"
                          Width="150"
                          Height="25"
                          SelectionChanged="FilterChanged">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="BorderBrush" Value="#444444"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton Name="ToggleButton"
                                                        Grid.Column="2"
                                                        Background="#2A2A2A"
                                                        BorderBrush="#444444"
                                                        Focusable="false"
                                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                        ClickMode="Press">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="20"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter Name="ContentSite"
                Grid.Column="0"
                IsHitTestVisible="False"
                Content="{TemplateBinding SelectionBoxItem}"
                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                Margin="5,3,5,3"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                TextElement.Foreground="#CCCCCC"/>
                                                    <TextBlock Grid.Column="1"
                                                             Text="▼"
                                                             Foreground="#CCCCCC"
                                                             VerticalAlignment="Center"
                                                             HorizontalAlignment="Center"
                                                             FontSize="8"/>
                                                </Grid>
                                            </ToggleButton>
                                            <Popup Name="Popup"
                                                 Placement="Bottom"
                                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                                 AllowsTransparency="True"
                                                 Focusable="False"
                                                 PopupAnimation="Slide">
                                                <Grid Name="DropDown"
                                                    SnapsToDevicePixels="True"
                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                    MaxHeight="200">
                                                    <Border x:Name="DropDownBorder"
                                                          Background="#2A2A2A"
                                                          BorderThickness="1"
                                                          BorderBrush="#444444"/>
                                                    <ScrollViewer Margin="2"
                                                                SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True"
                                                                  KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="Padding" Value="5"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#444444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem Content="All Minerals" IsSelected="True"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Prices Grid -->
        <DataGrid Name="PricesGrid"
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="Vertical"
                  HeadersVisibility="Column"
                  Background="#2A2A2A"
                  Foreground="#CCCCCC"
                  RowBackground="#2A2A2A"
                  AlternatingRowBackground="#333333"
                  BorderBrush="#444444"
                  IsReadOnly="True">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#444444"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mineral" 
                                    Binding="{Binding MineralName}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Price (Sell)" 
                                    Binding="{Binding Price}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Best Station (Sell)" 
                                    Binding="{Binding BestLocation}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Demand" 
                                    Binding="{Binding Demand}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Demand}" Value="High">
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Demand}" Value="Low">
                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Text -->
        <TextBlock Grid.Row="2"
                   Name="StatusText"
                   Text="Loading..."
                   Foreground="#CCCCCC"
                   Margin="10"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>