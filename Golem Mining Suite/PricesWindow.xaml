<Window x:Class="Golem_Mining_Suite.PricesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mineral Prices" Height="500" Width="600"
        Background="#1E1E1E"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Current Mineral Prices Per SCU"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#CCCCCC"
                   Margin="10"
                   HorizontalAlignment="Center"/>

        <!-- Prices Grid -->
        <DataGrid Grid.Row="1" 
          Name="PricesGrid" 
          Margin="10"
          AutoGenerateColumns="False"
          Background="#2A2A2A"
          Foreground="#CCCCCC"
          RowBackground="#2A2A2A"
          AlternatingRowBackground="#333333"
          BorderBrush="#444444"
          IsReadOnly="True">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mineral" Binding="{Binding MineralName}" Width="*"/>
                <DataGridTextColumn Header="Best Price" Binding="{Binding Price}" Width="150"/>
                <DataGridTextColumn Header="Best Location" Binding="{Binding BestLocation}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Status Text -->
        <TextBlock Grid.Row="2"
                   Name="StatusText"
                   Text="Loading prices..."
                   Foreground="#CCCCCC"
                   Margin="10"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>