<UserControl x:Class="Golem_Mining_Suite.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A1A" Height="557">

    <UserControl.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3528"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF8C42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <StackPanel Grid.Row="0" Margin="0,20,0,40">
            <Image Source="/Assets/images/GolemMiningSuite_Logo.png" 
       Height="80" 
       Stretch="Uniform"
       Width="270" Margin="0,15,0,0">
                <Image.Effect>
                    <DropShadowEffect Color="#FF8C42" 
                          BlurRadius="15" 
                          ShadowDepth="0" 
                          Opacity="0.3"/>
                </Image.Effect>
            </Image>
            <TextBlock Text="Select Option Below"
                       Foreground="#888888"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"
                       FontWeight="Bold"/>
        </StackPanel>

        <!-- Menu Buttons -->
        <StackPanel Margin="0,162,0,0" Height="280" VerticalAlignment="Top" Grid.RowSpan="2">
            <Button Content="â›ï¸ Surface Mining"
                    Click="SurfaceMining_Click"
                    Style="{StaticResource MenuButton}"
                    FontWeight="Bold"/>

            <Button Content="ðŸª¨ Asteroid Mining"
                    Click="AsteroidMining_Click"
                    Style="{StaticResource MenuButton}"
                    FontWeight="Bold"/>

            <Button Content="ðŸŽ’ ROC / FPS Mining"
                    Click="RocMining_Click"
                    Style="{StaticResource MenuButton}"
                    FontWeight="Bold"/>

            <Button Content="ðŸ­ Refinery Calculator"
                    Click="RefineryCalculator_Click"
                    Style="{StaticResource MenuButton}"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- Footer -->
        <Grid Grid.Row="1" Margin="10,238,0,56">
            <TextBlock Name="VersionText"
                       Text="v1.1.1"
                       Foreground="#666666"
                       FontSize="11"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"/>

            <Button x:Name="UexLinkButton"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="UexLinkButton_Click"
                    Padding="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1.0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Image Source="/Assets/Images/uex-logo.png" 
                       Height="30" 
                       Width="82"
                       Stretch="Uniform"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
