<UserControl x:Class="Golem_Mining_Suite.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Golem_Mining_Suite.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="DashboardTile" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3528"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{DynamicResource AccentColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Welcome Header -->
            <RowDefinition Height="*"/>    <!-- Tiles -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="{Binding WelcomeText}" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Select a module to begin operation" 
                       FontSize="16" 
                       Foreground="{DynamicResource TextSecondaryBrush}" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>

            <!-- Mode Switcher -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Command="{Binding SwitchToMiningCommand}"
                        Content="â›ï¸ Mining"
                        Padding="15,8"
                        Margin="0,0,20,0">
                     <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMiningMode}" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsMiningMode}" Value="False">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                     </Button.Style>
                </Button>

                <Button Command="{Binding SwitchToHaulingCommand}"
                        Content="ðŸ“¦ Hauling"
                        Padding="15,8">
                     <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHaulingMode}" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsHaulingMode}" Value="False">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                     </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Scrollable Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Mining Dashboard Tiles -->
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="1000" Visibility="{Binding IsMiningMode, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: Mining Modes -->
                    <!-- Surface Mining -->
                    <Button Grid.Row="0" Grid.Column="0" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="SurfaceMining"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ’Ž" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Surface Mining" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Planetary deposits" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Asteroid Mining -->
                    <Button Grid.Row="0" Grid.Column="1" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="AsteroidMining"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="â˜„ï¸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Asteroid Mining" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Space belt deposits" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- ROC Mining -->
                    <Button Grid.Row="0" Grid.Column="2" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="ROCMining"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸª¨" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="ROC / FPS Mining" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Gems and small nodes" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Row 1: Tools -->
                    <!-- Prices -->
                    <Button Grid.Row="1" Grid.Column="0" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding OpenPricesCommand}"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Market Prices" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Live trading data" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Cargo Calculator -->
                    <Button Grid.Row="1" Grid.Column="1" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding OpenCalculatorCommand}"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ§®" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Cargo Calculator" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Estimate cargo value" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Refinery Calculator -->
                    <Button Grid.Row="1" Grid.Column="2" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding OpenRefineryCalculatorCommand}"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ­" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Refinery Calculator" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Calculate yields &amp; costs" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Hauling Dashboard Tiles -->
                <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="1000" Visibility="{Binding IsHaulingMode, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Market Prices -->
                    <Button Grid.Column="0" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding OpenHaulingPricesCommand}"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Market Prices" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Commodity prices" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Cargo Calculator -->
                    <Button Grid.Column="1" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding OpenHaulingCalculatorCommand}"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ§®" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Cargo Calculator" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Estimate payload value" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Hauling Routes -->
                    <Button Grid.Column="2" 
                            Style="{DynamicResource DashboardTile}" 
                            Command="{Binding OpenHaulingRoutesCommand}"
                            Height="140"
                            Margin="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ›£ï¸" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Hauling Routes" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Plan your route" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <TextBlock Name="VersionText"
                       Text="{Binding VersionText}"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       FontSize="12"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"/>

            <!-- Footer Links -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button x:Name="UexLinkButton"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding OpenUexLinkCommand}"
                        Padding="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="0.6"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="1.0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="/Assets/Images/uex-logo.png" 
                           Height="30" 
                           Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
