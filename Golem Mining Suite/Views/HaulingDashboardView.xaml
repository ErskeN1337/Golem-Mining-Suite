<UserControl x:Class="Golem_Mining_Suite.Views.HaulingDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Golem_Mining_Suite.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:HaulingDashboardViewModel}"
             Background="Transparent">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Search -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Hauling Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource AccentBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Find profitable trade routes and commodities" 
                       FontSize="14" 
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Search Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SecondaryBackgroundBrush}" 
                CornerRadius="20" 
                Width="400" 
                Height="40"
                Margin="0,0,0,30"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="15,0,5,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalAlignment="Center"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         CaretBrush="{DynamicResource AccentBrush}"
                         FontSize="14">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SelectSuggestionCommand}" CommandParameter="{Binding SearchText}"/>
                    </TextBox.InputBindings>
                    <x:Code>
                        <![CDATA[
                            private void OnGotFocus(object sender, System.Windows.RoutedEventArgs e) 
                            { 
                                if(DataContext is Golem_Mining_Suite.ViewModels.HaulingDashboardViewModel vm) vm.SearchGotFocusCommand.Execute(null); 
                            }
                            private void OnLostFocus(object sender, System.Windows.RoutedEventArgs e) 
                            { 
                                if(DataContext is Golem_Mining_Suite.ViewModels.HaulingDashboardViewModel vm) vm.SearchLostFocusCommand.Execute(null); 
                            }
                        ]]>
                    </x:Code>
                    <!-- Behaviours or Attached Properties would be cleaner but x:Code works for quick wireup without adding Behaviors SDK yet -->
                    <!-- Actually let's use EventTrigger if possible or just Interaction Triggers if available. 
                         Since I don't see Behaviours used elsewhere, I will trust the ViewModel commands are bound via interaction logic or similar.
                         Wait, SurfaceMiningView used simple bindings. I'll rely on text change. -->
                </TextBox>
                
                <Popup IsOpen="{Binding ShowSuggestions}" 
                       PlacementTarget="{Binding ElementName=SearchBox}"
                       StaysOpen="False"
                       AllowsTransparency="True">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" MaxHeight="200" Width="400">
                        <ListBox ItemsSource="{Binding Suggestions}" 
                                 Background="Transparent"
                                 BorderThickness="0">
                                 <!-- Simple impl for now -->
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>
        </Border>

        <!-- Content Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding FeaturedCommodities}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="180" Height="140" Margin="10">
                            <!-- Background with Shadow -->
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}" 
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                            <!-- Content Overlay -->
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}" 
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1">
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="ðŸ“¦" FontSize="24" HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}"/>
                                    
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Foreground="{DynamicResource TextPrimaryBrush}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>

                                    <Button Grid.Row="2" 
                                            Content="TRADING INFO" 
                                            Command="{Binding DataContext.OpenCommodityInfoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Height="30"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Loading Indicator -->
        <Grid Grid.Row="2" Background="#88000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">
            <TextBlock Text="Loading Commodities..." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        </Grid>
    </Grid>
</UserControl>
