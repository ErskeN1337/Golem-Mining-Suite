<UserControl x:Class="Golem_Mining_Suite.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Golem_Mining_Suite.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:LiveDataViewModel}"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <!-- Header -->
            <TextBlock Text="Settings" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,30"/>

            <!-- Live Data Section (COMING SOON) -->
            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="25"
                    Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸŒ Live Crowdsourced Data" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource AccentBrush}"/>
                        <Border Background="#333333" CornerRadius="4" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="COMING SOON" FontSize="12" FontWeight="Bold" Foreground="#FFC107"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="We are working on a revolutionary feature that allows the community to automatically share and receive real-time terminal prices while playing." 
                               FontSize="14" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                               
                    <TextBlock Text="Current Status:" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,10,0,5"/>
                    <TextBlock Text="â€¢ Backend infrastructure is being finalized." Foreground="{DynamicResource TextSecondaryBrush}" Margin="10,0,0,2"/>
                    <TextBlock Text="â€¢ OCR technology for automatic price detection is in testing." Foreground="{DynamicResource TextSecondaryBrush}" Margin="10,0,0,2"/>
                    <TextBlock Text="â€¢ Security and privacy audits are underway." Foreground="{DynamicResource TextSecondaryBrush}" Margin="10,0,0,2"/>

                    <TextBlock Text="Stay tuned for future updates!" 
                               FontSize="14" 
                               FontStyle="Italic"
                               Foreground="{DynamicResource AccentBrush}"
                               Margin="0,20,0,0"/>

                </StackPanel>
            </Border>

            <!-- Future Settings Sections -->
            <TextBlock Text="More settings coming soon..." 
                       FontSize="14" 
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
