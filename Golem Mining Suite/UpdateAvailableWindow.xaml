<Window x:Class="Golem_Mining_Suite.UpdateAvailableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" Height="400" Width="500"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="ðŸŽ‰ Update Available!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#4CAF50"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Version Info -->
        <Border Grid.Row="1" 
                Background="#2A2A2A"
                BorderBrush="#444444"
                BorderThickness="1"
                Margin="20,10"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Current Version"
                             Foreground="#888888"
                             FontSize="12"
                             HorizontalAlignment="Center"/>
                    <TextBlock Name="CurrentVersionText"
                             Text="v1.0.0"
                             Foreground="#CCCCCC"
                             FontSize="20"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                         Text="â†’"
                         Foreground="#4CAF50"
                         FontSize="24"
                         FontWeight="Bold"
                         VerticalAlignment="Center"
                         Margin="20,0"/>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="New Version"
                             Foreground="#888888"
                             FontSize="12"
                             HorizontalAlignment="Center"/>
                    <TextBlock Name="NewVersionText"
                             Text="v1.1.0"
                             Foreground="#4CAF50"
                             FontSize="20"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Release Notes -->
        <Border Grid.Row="2"
                Background="#2A2A2A"
                BorderBrush="#444444"
                BorderThickness="1"
                Margin="20,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="What's New:"
                             Foreground="#CCCCCC"
                             FontSize="14"
                             FontWeight="Bold"
                             Margin="0,0,0,10"/>
                    <TextBlock Name="ReleaseNotesText"
                             Text="Loading release notes..."
                             Foreground="#CCCCCC"
                             TextWrapping="Wrap"
                             FontSize="12"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Name="DownloadButton"
                    Content="Download Update"
                    Margin="0,0,5,0"
                    Padding="10"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="#4CAF50"
                    BorderThickness="1"
                    Cursor="Hand"
                    Click="DownloadButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66BB6A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1"
                    Name="SkipButton"
                    Content="Skip for Now"
                    Margin="5,0,0,0"
                    Padding="10"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#2A2A2A"
                    Foreground="#CCCCCC"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    Cursor="Hand"
                    Click="SkipButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
