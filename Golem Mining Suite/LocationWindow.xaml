<Window x:Class="Golem_Mining_Suite.LocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Best Locations" Height="400" Width="500"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Name="TitleText"
                   Margin="10"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#CCCCCC"
                   Text="Best Locations for [Deposit]"/>

        <!-- Locations Grid -->
        <DataGrid Grid.Row="1" 
                  Name="LocationsGrid" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  Background="#2A2A2A"
                  Foreground="#CCCCCC"
                  RowBackground="#2A2A2A"
                  AlternatingRowBackground="#333333"
                  BorderBrush="#444444"
                  IsReadOnly="True">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="CCCCCC"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="*"/>
                <DataGridTextColumn Header="Chance" Binding="{Binding Chance}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>