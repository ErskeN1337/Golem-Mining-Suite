<Window x:Class="Golem_Mining_Suite.LocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Best Locations" 
        Height="450" 
        Width="600"
        Background="#1A1A1A"
        BorderBrush="#FF8C42"
        BorderThickness="1">
    <Window.Resources>
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D2D"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#444444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveFilterButton" TargetType="Button" BasedOn="{StaticResource FilterButton}">
            <Setter Property="Background" Value="#3D5A80"/>
            <Setter Property="BorderBrush" Value="#5A7FA0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Name="TitleText"
                   Margin="10"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#CCCCCC"
                   Text="Best Locations for [Deposit]"/>

        <!-- Filter Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="10,0,10,10">
            <Button Name="AllButton"
                    Content="All"
                    Width="80"
                    Style="{StaticResource ActiveFilterButton}"
                    Click="FilterButton_Click"
                    Tag="All"
                    Margin="0,0,5,0"/>
            <Button Name="StantonButton"
                    Content="Stanton"
                    Width="80"
                    Style="{StaticResource FilterButton}"
                    Click="FilterButton_Click"
                    Tag="Stanton"
                    Margin="0,0,5,0"/>
            <Button Name="PyroButton"
                    Content="Pyro"
                    Width="80"
                    Style="{StaticResource FilterButton}"
                    Click="FilterButton_Click"
                    Tag="Pyro"/>
        </StackPanel>

        <!-- Locations Grid -->
        <DataGrid Grid.Row="2" 
                  Name="LocationsGrid" 
                  Margin="10"
                  AutoGenerateColumns="False"
                  Background="#2A2A2A"
                  Foreground="#CCCCCC"
                  RowBackground="#2A2A2A"
                  AlternatingRowBackground="#333333"
                  BorderBrush="#444444"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  IsReadOnly="True">

            <!-- Column Header Style -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#252525"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#333333"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                                <Grid>
                                    <Border Background="#252525"
                                            BorderBrush="#333333"
                                            BorderThickness="0,0,1,1"
                                            Padding="10,8">
                                        <ContentPresenter HorizontalAlignment="Left"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Cell Style -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{TemplateBinding Background}"
                                        BorderThickness="0"
                                        Padding="10,5">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>

            <!-- Columns -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Deposit %" Binding="{Binding DepositChance}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Mineral %" Binding="{Binding MineralChance}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Signature" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Signature}" 
                           Foreground="#FF8C42"
                           FontWeight="Bold"
                           Padding="5"
                           Cursor="Hand"
                           MouseEnter="Signature_MouseEnter"
                           MouseLeave="Signature_MouseLeave">
                                <TextBlock.ToolTip>
                                    <ToolTip Name="SignatureTooltip" 
                                 Background="#2A2A2A" 
                                 BorderBrush="#FF8C42"
                                 BorderThickness="1">
                                        <TextBlock Text="Click for details" 
                                       Foreground="#CCCCCC"/>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Signature Popup -->
        <Popup Name="SignaturePopup"
       PlacementTarget="{Binding ElementName=LocationsGrid}"
       Placement="Mouse"
       AllowsTransparency="True"
       StaysOpen="False">
            <Border Background="#2A2A2A"
            BorderBrush="#FF8C42"
            BorderThickness="2"
            CornerRadius="4"
            Padding="15">
                <StackPanel>
                    <TextBlock Name="PopupTitle"
                       Text="Shale"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#CCCCCC"
                       Margin="0,0,0,10"/>

                    <TextBlock Text="Cluster Rocks"
                       FontSize="12"
                       Foreground="#888888"
                       Margin="0,0,0,5"/>

                    <ItemsControl Name="ClusterRocksPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                       Text="{Binding Size}" 
                                       Foreground="#CCCCCC"/>
                                    <TextBlock Grid.Column="1" 
                                       Text="{Binding Percentage}" 
                                       Foreground="#FF8C42"
                                       HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>