<Window x:Class="Golem_Mining_Suite.PricesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mineral Prices" Height="600" Width="900"
        Background="#1E1E1E"
        BorderBrush="#FF8C42"
        BorderThickness="1"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <!-- ADD TRIGGERS -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3528"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF8C42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF8C42"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ActiveFilterButton" TargetType="Button" BasedOn="{StaticResource FilterButton}">
            <Setter Property="Background" Value="#FF8C42"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF8C42"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- System Filter (Row 0) - Both modes -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Width="770" Margin="0,5,0,0" Height="36" VerticalAlignment="Top">
            <TextBlock Text="System:" Foreground="#CCCCCC" 
               VerticalAlignment="Center" Margin="10,10,5,0"/>
            <Button x:Name="AllButton" Content="All" Width="100" Height="26"
            Style="{StaticResource ActiveFilterButton}"
            Margin="5,10,5,0" Click="FilterButton_Click" Tag="All"/>
            <Button x:Name="StantonButton" Content="Stanton" Width="100" Height="25"
            Style="{StaticResource FilterButton}"
            Margin="5,10,5,0" Click="FilterButton_Click" Tag="Stanton"/>
            <Button x:Name="PyroButton" Content="Pyro" Width="100" Height="25"
            Style="{StaticResource FilterButton}"
            Margin="5,10,5,0" Click="FilterButton_Click" Tag="Pyro"/>
            <TextBlock Text="Mineral:" 
                       Foreground="#CCCCCC" 
                       VerticalAlignment="Center"
                       Margin="150,10,5,0"/>
            <ComboBox Name="MineralFilterComboBox"
                      Width="150"
                      Height="25"
                      SelectionChanged="FilterChanged" Margin="5,10,5,0">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <ToggleButton Name="ToggleButton"
                                                    Grid.Column="2"
                                                    Background="#2A2A2A"
                                                    BorderBrush="#444444"
                                                    Focusable="false"
                                                    IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                    ClickMode="Press">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Name="ContentSite"
                Grid.Column="0"
                IsHitTestVisible="False"
                Content="{TemplateBinding SelectionBoxItem}"
                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                Margin="5,3,5,3"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                TextElement.Foreground="#CCCCCC"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="▼"
                                                         Foreground="#CCCCCC"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         FontSize="8"/>
                                            </Grid>
                                        </ToggleButton>
                                        <Popup Name="Popup"
                                             Placement="Bottom"
                                             IsOpen="{TemplateBinding IsDropDownOpen}"
                                             AllowsTransparency="True"
                                             Focusable="False"
                                             PopupAnimation="Slide">
                                            <Grid Name="DropDown"
                                                SnapsToDevicePixels="True"
                                                MinWidth="{TemplateBinding ActualWidth}"
                                                MaxHeight="200">
                                                <Border x:Name="DropDownBorder"
                                                      Background="#2A2A2A"
                                                      BorderThickness="1"
                                                      BorderBrush="#444444"/>
                                                <ScrollViewer Margin="2"
                                                            SnapsToDevicePixels="True">
                                                    <StackPanel IsItemsHost="True"
                                                              KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                </ScrollViewer>
                                            </Grid>
                                        </Popup>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.Style>
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBoxItem Content="All Minerals" IsSelected="True"/>
            </ComboBox>
        </StackPanel>

        <!-- Prices Grid -->
        <DataGrid Name="PricesGrid"
                  Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="Vertical"
                  HeadersVisibility="Column"
                  Background="#2A2A2A"
                  Foreground="#CCCCCC"
                  RowBackground="#2A2A2A"
                  AlternatingRowBackground="#333333"
                  BorderBrush="#444444"
                  IsReadOnly="True">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#444444"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mineral" 
                                    Binding="{Binding MineralName}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Price (Sell)" 
                                    Binding="{Binding Price}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Best Station (Sell)" 
                                    Binding="{Binding BestLocation}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Demand" 
                                    Binding="{Binding Demand}" 
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Demand}" Value="High">
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Demand}" Value="Low">
                                    <Setter Property="Foreground" Value="#FF6B6B"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Text -->
        <TextBlock Grid.Row="2"
                   Name="StatusText"
                   Text="Loading..."
                   Foreground="#CCCCCC"
                   Margin="10"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>