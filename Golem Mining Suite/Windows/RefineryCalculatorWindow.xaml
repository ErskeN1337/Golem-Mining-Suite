<Window x:Class="Golem_Mining_Suite.RefineryCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Golem_Mining_Suite.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:RefineryViewModel}"
        Title="Refinery Calculator" Height="750" Width="650"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}"/>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Refinery Calculator" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource AccentBrush}" 
                   Margin="0,0,0,20"/>

        <!-- Refinery Selection -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Refinery Location:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="RefineryComboBox" Grid.Column="2"
                              ItemsSource="{Binding Refineries}"
                              SelectedItem="{Binding SelectedRefinery}"/>
                </Grid>
                
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Refinery Method:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="MethodComboBox" Grid.Column="2"
                              ItemsSource="{Binding Methods}"
                              SelectedItem="{Binding SelectedMethod}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Status Text -->
        <TextBlock x:Name="StatusText" Grid.Row="2"
                   Text="{Binding StatusText}"
                   FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"
                   Margin="0,0,0,15"/>

        <!-- Mineral Input Grid (Dynamic) -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
             <ItemsControl ItemsSource="{Binding MineralRows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Mineral:" Margin="0,0,0,5" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <ComboBox Grid.Row="2" Grid.Column="0"
                                          ItemsSource="{Binding Minerals}"
                                          SelectedItem="{Binding SelectedMineral}"/>
                                
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="SCU Amount:" Margin="0,0,0,5" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Grid.Row="2" Grid.Column="2"
                                         Text="{Binding ScuText, UpdateSourceTrigger=PropertyChanged}"/>
                                
                                <Button Grid.Row="2" Grid.Column="4" Content="✖"
                                        Padding="0"
                                        Command="{Binding RemoveCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#F44336"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Add Mineral Button -->
        <Button x:Name="AddMineralButton" Grid.Row="4"
                Content="➕ Add Mineral"
                Command="{Binding AddMineralRowCommand}"
                IsEnabled="{Binding CanAddMineral}"
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                Width="200"/>

        <!-- Summary Panel -->
        <Border Grid.Row="5" Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource AccentBrush}" 
                BorderThickness="1" CornerRadius="6" Padding="20">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <TextBlock Text="Total Raw Value:" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding RawValueText}" HorizontalAlignment="Right" Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Grid>
                
                <Grid Margin="0,0,0,8">
                     <TextBlock Text="Estimated Cost:" Foreground="{DynamicResource TextSecondaryBrush}"/>
                     <TextBlock Text="{Binding RefineryCostText}" HorizontalAlignment="Right" Foreground="#F44336"/>
                </Grid>
                
                <Grid Margin="0,0,0,8">
                     <TextBlock Text="Yield Bonus:" Foreground="{DynamicResource TextSecondaryBrush}"/>
                     <TextBlock Text="{Binding YieldBonusText}" HorizontalAlignment="Right" Foreground="#4CAF50"/>
                </Grid>
                
                <Separator Background="{DynamicResource BorderBrush}" Margin="0,5,0,10"/>
                
                <Grid Margin="0,0,0,10">
                     <TextBlock Text="Refined Value:" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                     <TextBlock Text="{Binding RefinedValueText}" FontWeight="Bold" HorizontalAlignment="Right" Foreground="#FFC107"/>
                </Grid>
                
                <Grid>
                     <TextBlock Text="Net Profit:" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                     <TextBlock Text="{Binding NetProfitText}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" Foreground="#4CAF50"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
