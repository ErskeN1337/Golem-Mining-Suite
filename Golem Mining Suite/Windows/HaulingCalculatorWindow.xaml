<Window x:Class="Golem_Mining_Suite.Windows.HaulingCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hauling Cargo Calculator" Height="700" Width="600"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}"/>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- Extra row for Summary -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Hauling Cargo Calculator" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource AccentBrush}" 
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Ship Selection & Cargo Capacity -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Ship:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding Ships}"
                              SelectedItem="{Binding SelectedShip}"/>
                </Grid>
                
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ProgressBar Grid.Column="0"
                                 Height="20" Minimum="0" Maximum="100" 
                                 Value="{Binding CapacityPercentage}"
                                 Foreground="{DynamicResource AccentBrush}" 
                                 Background="{DynamicResource PrimaryBackgroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 BorderThickness="1"/>
                    
                    <TextBlock Grid.Column="2"
                               Text="{Binding CapacityText}" 
                               VerticalAlignment="Center"
                               FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOverCapacity}" Value="True">
                                        <Setter Property="Foreground" Value="#F44336"/> <!-- Red -->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>

        <!-- Selling Station Selection -->
        <Border Grid.Row="2" Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Selling Station:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding Stations}"
                          SelectedItem="{Binding SelectedStation}"/>
            </Grid>
        </Border>
        
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <ItemsControl ItemsSource="{Binding Rows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Commodity:" Margin="0,0,0,5" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <ComboBox Grid.Row="2" Grid.Column="0"
                                          ItemsSource="{Binding Commodities}"
                                          SelectedItem="{Binding SelectedCommodity}"/>
                                
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="SCU Amount:" Margin="0,0,0,5" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Grid.Row="2" Grid.Column="2"
                                         Text="{Binding ScuText, UpdateSourceTrigger=PropertyChanged}"/>
                                
                                <Button Grid.Row="2" Grid.Column="4" Content="✖"
                                        Padding="0"
                                        Command="{Binding RemoveCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#F44336"/>
                                
                                <!-- Price Information Row -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
                                    <TextBlock Text="{Binding PricePerUnit}" 
                                               FontSize="11" 
                                               Foreground="{DynamicResource AccentBrush}"
                                               Margin="0,0,15,0"/>
                                    <TextBlock Text="{Binding RowValue}" 
                                               FontSize="11" 
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource AccentBrush}"/>
                                    <TextBlock Text="{Binding PriceWarning}" 
                                               FontSize="11" 
                                                Foreground="{DynamicResource TextSecondaryBrush}"
                                                Visibility="{Binding HasPriceWarning, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Add Commodity Button -->
        <Button Grid.Row="4" Content="➕ Add Commodity"
                Command="{Binding AddCommodityRowCommand}"
                IsEnabled="{Binding CanAddRow}"
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                Width="200"/>

        <!-- Summary Panel -->
        <Border Grid.Row="5" Background="{DynamicResource SecondaryBackgroundBrush}" BorderBrush="{DynamicResource AccentBrush}" 
                BorderThickness="1" CornerRadius="6" Padding="20">
            <StackPanel>
                <TextBlock Text="{Binding TotalValueText}" 
                           FontSize="20" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="{Binding PricePerSCUText}" 
                           FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
