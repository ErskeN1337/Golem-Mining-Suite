<Window x:Class="Golem_Mining_Suite.LocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Best Locations" 
        Height="600" 
        Width="700"
        Background="#1A1A1A"
        BorderBrush="#FF8C42"
        BorderThickness="1"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Filter Button Style -->
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3528"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF8C42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Filter Button Style -->
        <Style x:Key="ActiveFilterButton" TargetType="Button" BasedOn="{StaticResource FilterButton}">
            <Setter Property="Background" Value="#3D3528"/>
            <Setter Property="BorderBrush" Value="#FF8C42"/>
            <Setter Property="Foreground" Value="#FF8C42"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3528"/>
                    <Setter Property="Foreground" Value="#FF8C42"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3D3528"/>
                    <Setter Property="Foreground" Value="#FF8C42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Best Locations"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#FF8C42"
                   Margin="0,0,0,20"/>

        <!-- Filter Panel -->
        <Border Grid.Row="1" 
                Background="#252525" 
                BorderBrush="#333333" 
                BorderThickness="1"
                CornerRadius="4"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- System Filter (Row 0) -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="System:" 
                               Foreground="#888888" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontSize="12"/>
                    <Button x:Name="AllButton"
                            Content="All"
                            Tag="All"
                            Click="FilterButton_Click"
                            Style="{StaticResource ActiveFilterButton}"
                            Margin="0,0,5,0"/>
                    <Button x:Name="StantonButton"
                            Content="Stanton"
                            Tag="Stanton"
                            Click="FilterButton_Click"
                            Style="{StaticResource FilterButton}"
                            Margin="0,0,5,0"/>
                    <Button x:Name="PyroButton"
                            Content="Pyro"
                            Tag="Pyro"
                            Click="FilterButton_Click"
                            Style="{StaticResource FilterButton}"/>
                </StackPanel>

                <!-- Location Type Filter (Row 2) - ONLY FOR ASTEROID MINING -->
                <StackPanel x:Name="LocationTypePanel" 
                            Grid.Row="2" 
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <TextBlock Text="Type:" 
                               Foreground="#888888" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontSize="12"
                               Width="45"/>
                    <Button x:Name="AllTypeButton"
                            Content="All"
                            Tag="All"
                            Click="LocationTypeFilter_Click"
                            Style="{StaticResource ActiveFilterButton}"
                            Margin="0,0,5,0"/>
                    <Button x:Name="MiningBaseButton"
                            Content="Mining Bases"
                            Tag="MiningBase"
                            Click="LocationTypeFilter_Click"
                            Style="{StaticResource FilterButton}"
                            Margin="0,0,5,0"/>
                    <Button x:Name="LagrangeButton"
                            Content="Lagrange Points"
                            Tag="Lagrange"
                            Click="LocationTypeFilter_Click"
                            Style="{StaticResource FilterButton}"
                            Margin="0,0,5,0"/>
                    <Button x:Name="BeltButton"
                            Content="Belts"
                            Tag="Belt"
                            Click="LocationTypeFilter_Click"
                            Style="{StaticResource FilterButton}"/>
                </StackPanel>

                <!-- Planet Filter (Row 2) - ONLY FOR SURFACE MINING -->
                <StackPanel x:Name="PlanetFilterPanel" 
                            Grid.Row="2" 
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <TextBlock Text="Planet:" 
                               Foreground="#888888" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontSize="12"
                               Width="45"/>
                    <ComboBox x:Name="PlanetComboBox"
                              Width="200"
                              Height="28"
                              SelectionChanged="PlanetComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- Percentage Filters (Row 4) -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Location Search -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Search:" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontSize="12"/>
                        <TextBox x:Name="LocationSearchBox"
                                 Width="120"
                                 Height="28"
                                 Background="#1A1A1A"
                                 Foreground="#CCCCCC"
                                 BorderBrush="#333333"
                                 BorderThickness="1"
                                 Padding="6,4"
                                 VerticalContentAlignment="Center"
                                 TextChanged="LocationSearchBox_TextChanged"/>
                    </StackPanel>

                    <!-- Min Deposit % -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Min Deposit:" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontSize="12"/>
                        <TextBox x:Name="MinDepositBox"
                                 Width="40"
                                 Height="28"
                                 Background="#1A1A1A"
                                 Foreground="#CCCCCC"
                                 BorderBrush="#333333"
                                 BorderThickness="1"
                                 Padding="6,4"
                                 Text="0"
                                 VerticalContentAlignment="Center"
                                 TextChanged="MinDepositBox_TextChanged"/>
                        <TextBlock Text="%" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"
                                   Margin="2,0,0,0"
                                   FontSize="12"/>
                    </StackPanel>

                    <!-- Min Mineral % -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal">
                        <TextBlock Text="Min Mineral:" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontSize="12"/>
                        <TextBox x:Name="MinMineralBox"
                                 Width="40"
                                 Height="28"
                                 Background="#1A1A1A"
                                 Foreground="#CCCCCC"
                                 BorderBrush="#333333"
                                 BorderThickness="1"
                                 Padding="6,4"
                                 Text="0"
                                 VerticalContentAlignment="Center"
                                 TextChanged="MinMineralBox_TextChanged"/>
                        <TextBlock Text="%" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"
                                   Margin="2,0,0,0"
                                   FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2"
                Background="#252525"
                BorderBrush="#333333"
                BorderThickness="1"
                CornerRadius="4">
            <DataGrid x:Name="LocationsGrid"
                      AutoGenerateColumns="False"
                      Background="#252525"
                      Foreground="#CCCCCC"
                      BorderThickness="0"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      RowBackground="#252525"
                      AlternatingRowBackground="#2A2A2A">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1A1A1A"/>
                        <Setter Property="Foreground" Value="#FF8C42"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#333333"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3D3528"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="*"/>
                    <DataGridTextColumn Header="Deposit %" Binding="{Binding DepositChance}" Width="90"/>
                    <DataGridTextColumn Header="Mineral %" Binding="{Binding MineralChance}" Width="90"/>

                    <DataGridTemplateColumn Header="Signature" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Signature}" 
                                           Foreground="#FF8C42"
                                           FontWeight="Bold"
                                           MouseEnter="Signature_MouseEnter"
                                           MouseLeave="Signature_MouseLeave"
                                           Cursor="Hand"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Signature Popup -->
        <Popup x:Name="SignaturePopup"
               PlacementTarget="{Binding ElementName=LocationsGrid}"
               Placement="Mouse"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="#2A2A2A"
                    BorderBrush="#FF8C42"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="15">
                <StackPanel>
                    <TextBlock x:Name="PopupTitle"
                               Text="Deposit Name"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#FF8C42"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Cluster Rocks:"
                               Foreground="#888888"
                               FontSize="11"
                               Margin="0,0,0,5"/>

                    <ItemsControl x:Name="ClusterRocksPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Size}" 
                                               Foreground="#CCCCCC"
                                               FontSize="11"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Percentage}" 
                                               Foreground="#FF8C42"
                                               FontSize="11"
                                               FontWeight="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>