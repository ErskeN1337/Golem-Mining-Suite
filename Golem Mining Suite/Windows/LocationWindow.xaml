<Window x:Class="Golem_Mining_Suite.LocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Golem_Mining_Suite"
        xmlns:viewmodels="clr-namespace:Golem_Mining_Suite.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:LocationViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="700" Width="1100"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Filter Button Style -->
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="WindowTitle" Grid.Row="0" 
           Text="{Binding Title}"
           FontSize="24" FontWeight="Bold" 
           Foreground="{StaticResource AccentBrush}" 
           Margin="20,20,20,10"
           HorizontalAlignment="Left"/>

        <!-- Filter Panel -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1"
                Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- System Filter (Row 0) -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="System:" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    
                    <Button Content="All" Width="100" Height="35" Margin="5,0"
                            Command="{Binding SetSystemFilterCommand}" CommandParameter="All">
                         <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSystem}" Value="All">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="#1E1E1E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Stanton" Width="100" Height="35" Margin="5,0"
                            Command="{Binding SetSystemFilterCommand}" CommandParameter="Stanton">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSystem}" Value="Stanton">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="#1E1E1E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Pyro" Width="100" Height="35" Margin="5,0"
                            Command="{Binding SetSystemFilterCommand}" CommandParameter="Pyro">
                         <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSystem}" Value="Pyro">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="#1E1E1E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Location Type Filter (Row 2) - Asteroid only -->
                <StackPanel x:Name="LocationTypePanel" Grid.Row="2" 
                            Orientation="Horizontal" HorizontalAlignment="Center" 
                            Visibility="{Binding IsAsteroidMode, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Type:" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>

                    <Button Content="All" Width="120" Height="35" Margin="5,0"
                            Command="{Binding SetLocationTypeFilterCommand}" CommandParameter="All">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedLocationType}" Value="All">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="#1E1E1E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Mining Bases" Width="120" Height="35" Margin="5,0"
                            Command="{Binding SetLocationTypeFilterCommand}" CommandParameter="MiningBase">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedLocationType}" Value="MiningBase">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="#1E1E1E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Lagrange Points" Width="120" Height="35" Margin="5,0"
                            Command="{Binding SetLocationTypeFilterCommand}" CommandParameter="Lagrange">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedLocationType}" Value="Lagrange">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="#1E1E1E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Belts" Width="120" Height="35" Margin="5,0"
                            Command="{Binding SetLocationTypeFilterCommand}" CommandParameter="Belt">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedLocationType}" Value="Belt">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="#1E1E1E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Ore Type Filter (Row 4) - Asteroid only -->
                <StackPanel x:Name="OreTypePanel" Grid.Row="4" 
                            Orientation="Horizontal" HorizontalAlignment="Center" 
                            Visibility="{Binding IsAsteroidMode, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Ore Type:" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="OreTypeComboBox" Width="150" Height="35"
                              ItemsSource="{Binding OreTypes}"
                              SelectedItem="{Binding SelectedOreType}"/>
                </StackPanel>

                <!-- Planet Filter (Row 4) - Surface only - Need Inverted BoolToVis -->
                <StackPanel x:Name="PlanetFilterPanel" Grid.Row="4" 
                            Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAsteroidMode}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Planet:" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="PlanetComboBox" Width="200" Height="35"
                              ItemsSource="{Binding Planets}"
                              SelectedItem="{Binding SelectedPlanet}"/>
                </StackPanel>

                <!-- Search and Percentage Filters (Row 6) -->
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" 
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="Search:" Foreground="{StaticResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="LocationSearchBox" Width="200" Height="35"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Min Deposit % -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
            HorizontalAlignment="Right" VerticalAlignment="Center" 
            Margin="10,0">
                        <TextBlock Text="Min Deposit:" Foreground="{StaticResource TextSecondaryBrush}" 
               VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="MinDepositBox" Width="60" Height="35" 
              Text="{Binding MinDepositPercentText, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="%" Foreground="{StaticResource TextSecondaryBrush}" 
               VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Min Mineral % -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" 
            HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Min Mineral:" Foreground="{StaticResource TextSecondaryBrush}" 
               VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="MinMineralBox" Width="50" Height="35" 
              Text="{Binding MinMineralPercentText, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="%" Foreground="{StaticResource TextSecondaryBrush}" 
               VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <DataGrid x:Name="LocationsGrid" Grid.Row="2"
                  ItemsSource="{Binding Locations}"
                  AutoGenerateColumns="False"
                  Background="{StaticResource SecondaryBackgroundBrush}"
                  Foreground="{StaticResource TextPrimaryBrush}"
                  BorderBrush="{StaticResource BorderBrush}"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#333333"
                  RowBackground="{StaticResource SecondaryBackgroundBrush}"
                  AlternatingRowBackground="#252525"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserResizeRows="False"
                  Margin="20,10,20,20">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="Template">
                         <Setter.Value>
                             <ControlTemplate TargetType="DataGridCell">
                                 <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                     <ContentPresenter/>
                                 </Border>
                             </ControlTemplate>
                         </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#3D3528"/>
                            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="*"/>
                <DataGridTextColumn Header="Deposit %" Binding="{Binding DepositChance}" Width="100"/>
                <DataGridTextColumn Header="Mineral %" Binding="{Binding MineralChance}" Width="100"/>
                <DataGridTemplateColumn Header="Signature" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                              <Button Content="{Binding Signature}"
                                     Command="{Binding DataContext.ShowSignatureCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                     CommandParameter="{Binding}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource AccentBrush}"
                                     Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Signature Popup -->
        <Popup x:Name="SignaturePopup" 
               IsOpen="{Binding IsPopupOpen}"
               Placement="Center"
               PlacementTarget="{Binding ElementName=LocationsGrid}"
               StaysOpen="False">
            <Border Background="{StaticResource SecondaryBackgroundBrush}" 
                    BorderBrush="{StaticResource AccentBrush}" 
                    BorderThickness="2" 
                    CornerRadius="4"
                    Padding="15">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                         <TextBlock Text="{Binding PopupTitle}" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Foreground="{StaticResource AccentBrush}"/>
                         <Button Content="✖" HorizontalAlignment="Right" 
                                 Foreground="{StaticResource TextSecondaryBrush}" Background="Transparent" BorderThickness="0"
                                 Command="{Binding CloseSignatureCommand}"/>
                    </Grid>
                   
                    <ItemsControl ItemsSource="{Binding ClusterRocks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="{Binding Size}" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               Width="80"/>
                                    <TextBlock Text="{Binding Percentage}" 
                                               Foreground="{StaticResource AccentBrush}" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>