<Window x:Class="Golem_Mining_Suite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Golem Mining Suite"
        Width="800"
        Height="500"
        Background="#1E1E1E"
        Loaded="Window_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="What Mineral are you looking for?"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#CCCCCC"
                       Margin="10,10,10,5"
                       HorizontalAlignment="Center"/>

            <!-- UEX Corp Link Button with Logo Image -->
            <Button Name="UexLinkButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,10,0,5"
                    Padding="5"
                    Background="#2A2A2A"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="UexLinkButton_Click"
                    ToolTip="Open UEX Corp website - Live price data source">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Image Source="Images/uex-logo.png" 
                       Height="25" 
                       Stretch="Uniform"/>
            </Button>
        </Grid>

        <TextBox Grid.Row="1" 
                 Name="SearchBox" 
                 Margin="10"
                 FontSize="16"
                 Text="Enter mineral name..."
                 Background="#2A2A2A"
                 Foreground="#CCCCCC"
                 BorderBrush="#444444"
                 BorderThickness="1"
                 Padding="5"
                 KeyUp="SearchBox_KeyUp"
                 GotFocus="SearchBox_GotFocus"
                 LostFocus="SearchBox_LostFocus"/>

        <ListBox Grid.Row="2"
                 Name="SuggestionsListBox"
                 Margin="10,0,10,10"
                 Background="#2A2A2A"
                 Foreground="#CCCCCC"
                 BorderBrush="#444444"
                 BorderThickness="1"
                 Visibility="Collapsed"
                 MaxHeight="150"
                 MouseLeftButtonUp="SuggestionsListBox_MouseLeftButtonUp">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="Padding" Value="5"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#444444"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <TabControl Grid.Row="3"
                    Name="MainTabControl"
                    Background="#1E1E1E"
                    BorderBrush="#444444"
                    Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="#444444"
                                        BorderThickness="1,1,1,0"
                                        CornerRadius="4,4,0,0"
                                        Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    ContentSource="Header"
                                                    Margin="10,5"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#444444"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#2A2A2A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Ore Deposits" Name="DepositsTab">
                <DataGrid Name="ResultsGrid" 
                          Margin="10"
                          AutoGenerateColumns="False"
                          Background="#2A2A2A"
                          Foreground="#CCCCCC"
                          RowBackground="#2A2A2A"
                          AlternatingRowBackground="#333333"
                          BorderBrush="#444444"
                          IsReadOnly="True"
                          MouseDoubleClick="ResultsGrid_MouseDoubleClick">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2A2A2A"/>
                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ore Deposit" Binding="{Binding OreDeposit}" Width="*"/>
                        <DataGridTextColumn Header="Percentage" Binding="{Binding Percentage}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Name="LocationsTab" Visibility="Collapsed">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="LocationsTabText" Text="Locations" Margin="0,0,10,0"/>
                        <Button Content="âœ•" 
                                Background="Transparent" 
                                Foreground="#CCCCCC" 
                                BorderThickness="0"
                                FontSize="12"
                                Padding="5,0"
                                Click="CloseLocationsTab_Click"
                                Cursor="Hand"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Name="LocationTitleText"
                               Margin="10"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#CCCCCC"
                               Text="Best Locations for [Deposit]"/>

                    <DataGrid Grid.Row="1"
                              Name="LocationsGrid" 
                              Margin="10"
                              AutoGenerateColumns="False"
                              Background="#2A2A2A"
                              Foreground="#CCCCCC"
                              RowBackground="#2A2A2A"
                              AlternatingRowBackground="#333333"
                              BorderBrush="#444444"
                              IsReadOnly="True">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Location" Binding="{Binding LocationName}" Width="*"/>
                            <DataGridTextColumn Header="Chance" Binding="{Binding Chance}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Mineral Prices"
                    Width="200"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Padding="10"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#2A2A2A"
                    Foreground="#CCCCCC"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    Cursor="Hand"
                    Click="MineralPrices_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1"
                    Content="Cargo Calculator"
                    Width="200"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Padding="10"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#2A2A2A"
                    Foreground="#CCCCCC"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    Cursor="Hand"
                    Click="CargoCalculator_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
